# Configuration file for messageFacility test

process_name: messageFacility

message : {

   generate_preconfiguration_message : "some string"

   destinations :  {

      dest1 : {

         type       : file // or cerr, cout, syslog, sqlite (eventually)
         output     : "someDefaultFileName"
         filename   : "somefile.txt"
         extension  : ".someextension"

         outputStatistics : false
         resetStatistics  : false

         categories : {

            default : {
               limit       : 10 // some int
               reportEvery : 10 // some int
               timespan    : 10 // some int
            }

         }

         threshold       : "INFO" // some string
         placeholder     : true
         noLineBreaks    : true
         lineLength      : 144 // some int
         noTimeStamps    : false
         useMilliseconds : false

      }

      statistics : {

         dest1 : {

            type      : cerr  // or cout, or file
            filename  : "statistics.txt"
            extension : ".something"

            reset     : true

         }
      }
   }

   fwkJobReports : [ "report1", "report2", "report3" ]

   report1 : {

      placeholder : true
      filename    : "someFwkJobReportsFile.txt"
      extension   : ".something"

   }

}

